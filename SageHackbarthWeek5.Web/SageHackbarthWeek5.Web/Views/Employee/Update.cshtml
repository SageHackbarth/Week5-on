@model SageHackbarthWeek5.Web.Models.UpdateEmployeeModel

    <script src="~/Scripts/DMACC/employee.js" type="text/javascript"></script>

    <h2>Update</h2>

    <div class="row">
        <div class="col-md-3">
            <label>Search Name</label>
        </div>
        <div class="col-md-7">
            <input id="searchString" type="text" class="form-control" />
        </div>
        <div class="col-md-2">
            <button class="btn btn-dark" onclick="searchEmployee()">Search</button>
        </div>
    </div>

    <hr />

    <div id="successMessage" class="hidden alert alert-success">
        Successfully Updated!
    </div>
    <div id="errorMessage" class="hidden alert alert-danger">
        Error Occurred!
    </div>

    <input id="employeeId" type="hidden" />
    <div class="col-md-12">
        <div class="col-md-6">
            <label>Employee Name:</label>
        </div>
        <div class="col-md-6">
            <input id="employeeName" type="text" class="form-control" />
        </div>
    </div>
    <div class="col-md-12">
        <div class="col-md-6">
            <label>Email:</label>
        </div>
        <div class="col-md-6">
            <input id="employeeEmail" type="text" class="form-control" />
        </div>
    </div>
    <div class="col-md-12">
        <div class="col-md-6">
            <label>Role:</label>
        </div>
        <div class="col-md-6">
            <input id="employeeRole" type="text" class="form-control" />
        </div>
    </div>

    <div class="col-md-12">
        <button class="btn btn-secondary margin-top-md margin-left-md" onclick="updateEmployee()">Save</button>
    </div>